{
  "name": "liga.mono.typescript",
  "version": "1.0.0",
  "description": "Um mono-repositório para os projetos em TypeScript do Liga que incluem NestJS, Angular e Ionic",
  "main": "index.js",
  "scripts": {},
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/LDJ/liga.api.nestjs.base.git"
  },
  "author": "Vinícius Lourenço",
  "bugs": {
    "url": "https://gitlab.com/LDJ/liga.api.nestjs.base/issues"
  },
  "homepage": "https://gitlab.com/LDJ/liga.api.nestjs.base#readme",
  "devDependencies": {
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "husky": "^4.2.3"
  },
  "config": {
    "husky": {
      "hooks": {
        "prepare-commit-msg": "git cz --hook || true"
      }
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
