{
   "name": "nestjs.base",
   "version": "0.0.1",
   "description": "A API base para os projetos que necessitam de uma API.",
   "author": "Vinícius Lourenço",
   "private": true,
   "scripts": {
      "build": "tsc -p tsconfig.build.json",
      "build:prod": "rm -r -f dist && rimraf dist && npm run build",
      "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
      "start": "ts-node src/index.ts",
      "start:dev": "nest start --watch",
      "start:debug": "nest start --debug --watch",
      "start:prod": "node dist/main.js",
      "lint": "tslint -p tsconfig.json -c tslint.json",
      "test": "npm run test:e2e",
      "test:watch": "jest --watch",
      "test:cov": "jest --coverage",
      "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
      "test:e2e": "NODE_ENV=test API_ENABLE_LOGGING=false node node_modules/jest/bin/jest.js --config ./jest-e2e.json",
      "typeorm:cli": "ts-node ./node_modules/typeorm/cli -f ormconfig.js",
      "migration": "npm run typeorm:cli -- migration:run",
      "add-migration": "npm run typeorm:cli -- migration:generate -n",
      "revert-migration": "npm run typeorm:cli -- migration:revert",
      "deploy:heroku": "cd .. && git subtree push --prefix backend heroku master",
      "deploy:aws": "bash deploy.sh"
   },
   "engines": {
      "node": "12.x"
   },
   "dependencies": {
      "aws-serverless-express": "^3.3.8",
      "@nestjs/azure-storage": "^2.1.1",
      "@nestjs/common": "^7.4.4",
      "@nestjs/core": "^7.4.4",
      "@nestjs/jwt": "^7.1.0",
      "@nestjs/passport": "^7.1.0",
      "@nestjs/platform-express": "^7.4.4",
      "@nestjs/swagger": "^4.6.0",
      "@nestjs/typeorm": "^7.1.3",
      "@nestjsx/crud": "^4.6.2",
      "@nestjsx/crud-typeorm": "^4.6.2",
      "@sentry/node": "^5.22.3",
      "@sentry/minimal": "^5.22.3",
      "jwt-decode": "^2.2.0",
      "axios": "^0.20.0",
      "bcryptjs": "^2.4.3",
      "body-parser": "^1.19.0",
      "class-transformer": "^0.3.1",
      "class-validator": "^0.12.2",
      "connect-timeout": "^1.9.0",
      "dotenv": "^8.2.0",
      "envalid": "^6.0.2",
      "express-rate-limit": "^5.1.3",
      "google-auth-library": "^6.0.6",
      "helmet": "^4.1.0",
      "pg": "^8.3.3",
      "omit-deep": "^0.3.0",
      "passport": "^0.4.1",
      "passport-facebook-token": "^4.0.0",
      "passport-jwt": "^4.0.0",
      "passport-local": "^1.0.0",
      "reflect-metadata": "^0.1.13",
      "rimraf": "^3.0.2",
      "rxjs": "^6.6.2",
      "sqlite3": "^5.0.0",
      "swagger-ui-express": "^4.1.4",
      "typeorm": "~0.2.25",
      "uuid": "^8.3.0",
      "xss": "^1.0.8"
   },
   "devDependencies": {
      "@nestjs/cli": "^7.5.1",
      "@nestjs/schematics": "^7.1.1",
      "@nestjs/testing": "^7.4.4",
      "@types/bcryptjs": "^2.4.2",
      "@types/express": "^4.17.8",
      "@types/jest": "^26.0.12",
      "@types/luxon": "^1.21.0",
      "@types/ms": "^0.7.31",
      "@types/node": "^12.12.55",
      "@types/passport-facebook-token": "^0.4.34",
      "@types/passport-jwt": "^3.0.3",
      "@types/passport-local": "^1.0.33",
      "@types/supertest": "^2.0.8",
      "@types/axios": "^0.14.0",
      "tslint": "^5.20.1",
      "jest": "^26.0.1",
      "prettier": "^2.0.5",
      "supertest": "^4.0.2",
      "ts-jest": "^26.1.0",
      "ts-loader": "^7.0.5",
      "ts-node": "^8.10.2",
      "tsconfig-paths": "^3.9.0",
      "typescript": "^3.9.3"
   },
   "jest": {
      "moduleFileExtensions": [
         "js",
         "json",
         "ts"
      ],
      "rootDir": "src",
      "testRegex": ".spec.ts$",
      "transform": {
         "^.+\\.(t|j)s$": "ts-jest"
      },
      "coverageDirectory": "./coverage",
      "testEnvironment": "node"
   }
}
